{% extends 'user/admin.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <h1 class="text-center">Welkom {{ adminNName }}!</h1>
            <p class="text-center">
                Jij bent een admin.
            </p>
            <p class="text-center">
                Jouw dierenland heet: {{ adminLLand }}
            </p>
        </div>
        <div class="row">
            <table class="table">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for dier in diers %}
                    <tr>
                        <td>{{ dier.name }}</td>
                        <td>{{ dier.description }}</td>
                        <td>
                            {{ include('admin/_delete_form.html.twig', {'dier': dier}) }}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">No records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <a class="btn btn-success" href="{{ path('admin_dier_new') }}">Toevoegen</a>
    </div>
{% endblock %}

